@page
@model IndexModel
@{
    ViewData["Title"] = "专业管理";
}
<h2>
    @ViewData["Title"]
    <a asp-page="Add" class="btn btn-default" title="添加专业">添加专业</a>
</h2>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <td>专业编号</td>
            <td>所属学院</td>
            <td>专业名称</td>
            <td>编辑</td>
        </tr>
    </thead>
    @foreach (var item in Model.Profession)
    {
        <tr>
            <td>@item.Id</td>
            <td>@Model.Institute.FirstOrDefault(x => x.Id == item.InstituteId).Name</td>
            <td>@item.Name</td>
            <td>
                <form asp-page-handler="Delete" method="post">
                    <input hidden name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-default">删除</button>
                    <a asp-page="Update" asp-route-id="@item.Id" class="btn btn-default">修改</a>
                </form>
            </td>
        </tr>
    }
</table>
