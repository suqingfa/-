@page
@model IndexModel
@{
    ViewData["Title"] = "学期管理";
}
<h2>
    @ViewData["Title"]
    <a asp-page="Add" class="btn btn-default" title="添加学期">添加学期</a>
</h2>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <td>学期名称</td>
            <td>开始时间</td>
            <td>结束时间</td>
            <td>编辑</td>
        </tr>
    </thead>
    @foreach (var item in Model.Semester)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Start</td>
            <td>@item.End</td>
            <td>
                <form asp-page-handler="Delete" method="post">
                    <input hidden name="id" value="@item.Id" />
                    <button type="submit" class="btn btn-default">删除</button>
                    <a asp-page="Update" asp-route-id="@item.Id" class="btn btn-default">修改</a>
                </form>
            </td>
        </tr>
    }
</table>
